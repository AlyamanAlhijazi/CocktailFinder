<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>
    <%- include('partials/messages') %>
    <main>
        <h1>Sign in</h1>
        <div class="container">
            <!-- Het formulier voor het inloggen -->
            <form id="loginForm" method="POST" action="/users/login">
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required placeholder="Email">
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required placeholder="Password">
                </div>
                <div>
                    <button type="submit">Log in</button>
                </div>
            </form>

            <!-- Bericht voor foutmeldingen of succes -->
            <p id="message"></p>

            <!-- Link naar registratiepagina -->
            <p>Haven't made an account yet? <a href="/register">sign up here</a></p>
        </div>
    </main> 
    <script src="/script.js"></script>
</body>
</html>