<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <main>
        <h1>Submit Your Recipe</h1>
        <form action="/submit-recipe" method="POST" enctype="multipart/form-data">
            <label for="name">Recipe Name:</label>
            <input type="text" id="name" name="name" required><br>

            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea><br>

            <label for="steps">Steps:</label>
            <textarea id="steps" name="steps" required></textarea><br>

            <label for="glassType">Glass Type:</label>
            <input type="text" id="glassType" name="glassType" required><br>

            <label for="image">Upload an Image:</label>
            <input type="file" id="image" name="image" accept="image/*" required><br>

            <button type="submit">Submit Recipe</button>
        </form>
    </main>
    <footer>
        <%- include ('partials/nav.ejs') %>
    </footer>
</body>
</html>
